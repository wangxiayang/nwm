<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.horzwxy.wordmaster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.horzwxy.wordmaster.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.horzwxy.wordmaster.InputArticleActivity"
            android:label="@string/input_article">
        </activity>
        <activity
            android:name="me.horzwxy.wordmaster.ShowWordActivity"
            android:label="@string/show_words">
        </activity>
        <activity
            android:name="me.horzwxy.wordmaster.WordResultInfoActivity"
            android:label="@string/wordinfo">
        </activity>
        <activity
            android:name="me.horzwxy.wordmaster.WordInfoActivity"
            android:label="@string/wordinfo">
        </activity>
        <activity
            android:name="me.horzwxy.wordmaster.ShowNewlyAddedActivity"
            android:label="@string/newly_added">
        </activity>
    </application>

</manifest>
